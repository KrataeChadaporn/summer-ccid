{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts", "**/*.d.ts", "test/**/*", "dist/**/*"],
  "include": ["./src/**/*.ts","./server.ts" ]
}